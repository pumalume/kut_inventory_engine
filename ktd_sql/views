CREATE VIEW v_ktd_smart_production_rank AS
SELECT 
    p.product_id,
    p.product_name,
    p.category,
    COUNT(pl.production_id) AS production_frequency
FROM ktd_pos_products p
LEFT JOIN ktd_production_log pl ON p.product_id = pl.product_id
GROUP BY p.product_id, p.product_name, p.category
ORDER BY production_frequency DESC;



CREATE OR REPLACE VIEW v_ktd_production_frequency AS
SELECT 
    p.product_id,
    p.product_name,
    COUNT(pl.production_id) as prod_count,
    MAX(pl.timestamp) as last_produced
FROM ktd_pos_products p
LEFT JOIN ktd_production_log pl ON p.product_id = pl.product_id
GROUP BY p.product_id, p.product_name
ORDER BY prod_count DESC;

-- TABLE CONTEXT: ktd_stock_ledger
-- PURPOSE: Sums all changes to show current on-hand balance
CREATE VIEW ktd_stock_totals AS
SELECT 
	i.ingredient_id as id,
    i.ingredient_name as name, 
    SUM(l.quantity_change) AS current_quantity
FROM ktd_stock_ledger l
JOIN ktd_ingredients i ON i.ingredient_id = l.ingredient_id
GROUP BY l.ingredient_id;
